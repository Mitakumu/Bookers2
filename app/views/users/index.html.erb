<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p id="notice">
       <%= notice %>
      </p>

      <%= render 'users/users', books: @books, user: @user %>

      <h2>New book</h2>

      <% if @user.errors.any? %>
       <%= @user.errors.count %> errors occurred
       <% @user.errors.full_messages.each do |message| %>
        <%= message %>
       <% end %>
      <% end %>

      <%= render 'books/newbook', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-striped">
          <thead>
              <tr>
                  <td>image</td>
                  <td>name</td>
                  <td colspan"1"></td>
              </tr>
          </thead>
          <tbody>
              <% @users.each do |user| %>
               <tr>
                   <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                   <td><%= user.name %></td>
                   <td>
                       <%= link_to "Show", user_path(user) %>
                   </td>
               </tr>
              <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
