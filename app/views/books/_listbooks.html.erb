<h2>Book detail</h2>
<table class="table table-striped">
   <thead>
    <tr>
     <td colspan"1"></td>
     <td>Title</td>
     <td>Opinion</td>
    </tr>
   </thead>
   <tbody>
     <% books.each do |book| %>
       <tr>
        <td>
         <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        </td>
        <td>
           <%= link_to book_path(book.id) do %>
            <%= book.title %>
           <% end %>
        </td>
        <td><%= book.body %></td>
       </tr>
     <% end %>
   </tbody>
 </table>